{
  "private": false,
  "name": "@outdoormap/frontend-utils",
  "description": "Outdoormap > Front End Utilities",
  "version": "1.0.1",
  "author": "OutdoorMap <support@outdoormap.com>",
  "license": "MIT",
  "main": "index.js",
  "exports": {
    ".": "./index.js",
    "./postcss": "./src/postcss/index.js",
    "./js/*": "./src/js/*.js",
    "./css/*": "./src/css/*.css",
    "./scss/*": "./src/scss/*.scss",
    "./components/*": "./src/components/*/index.js",
    "./hooks/*": "./src/hooks/*.js",
    "./icons/*": "./src/icons/*.svg"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "scripts": {
    "demo": "node ./server.js",
    "lint:js": "eslint ./src --ext js,jsx",
    "format:js": "eslint ./src --ext js,jsx --fix",
    "lint:scss": "stylelint ./src/**/*.scss",
    "format:scss": "stylelint ./src/**/*.scss --fix",
    "lint:css": "stylelint ./src/**/*.css",
    "format:css": "stylelint ./src/**/*.css --fix",
    "link:local": "yarn link",
    "unlink:local": "yarn unlink",
    "_link:local": "yarn link && cd node_modules/react && yarn link && cd ../react-dom && yarn link",
    "_unlink:local": "yarn unlink && cd node_modules/react && yarn unlink && cd ../react-dom && yarn unlink",
    "compile-sass": "node ./sass.js"
  },
  "_peerDependencies": {
    "react": ">=19",
    "react-dom": ">=19"
  },
  "devDependencies": {
    "express": "^4.18.2",
    "path": "^0.12.7",
    "prettier": "^3.5.3",
    "sass": "^1.83.4",
    "stylelint": "^16.13.2",
    "stylelint-config-css-modules": "^4.4.0",
    "stylelint-config-standard": "^37.0.0",
    "stylelint-prettier": "^5.0.2"
  },
  "dependencies": {
    "startijenn-rem": "^1.1.1"
  }
}
